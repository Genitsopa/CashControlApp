@model List<CashControl.Context.Recipe>

<table class="table table-striped table-hover">
    <thead class="thead-dark">
        <tr>
            <th>Title</th>
            <th>Difficulty</th>
            <th>Chef</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Title</td>
                <td>@item.Difficulty</td>
                <td>@item.AssociatedChef.Name</td>
                <td>
                    <a href="@Url.Action("Edit", new { id = item.ID })" class="btn btn-primary">Edit</a>
                    <a href="@Url.Action("Delete", new { id = item.ID })" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>